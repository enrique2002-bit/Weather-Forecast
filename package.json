{
  "name": "split-weather-forecast",
  "version": "1.0.0",
  "description": "Beautiful weather forecast for Split, Croatia - Kiosk Mode",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "install-electron": "npm install electron --save-dev"
  },
  "keywords": ["weather", "forecast", "split", "croatia", "kiosk", "display"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^latest"
  },
  "build": {
    "appId": "com.yourcompany.weather-forecast",
    "productName": "Split Weather Forecast",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "electron-main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
